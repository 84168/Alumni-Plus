<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Alumni Information Form</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            padding: 20px;
            min-height: 100vh;
        }

        .container {
            max-width: 900px;
            margin: 0 auto;
            background: white;
            border-radius: 15px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            overflow: hidden;
        }

        .header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 40px;
            text-align: center;
        }

        .header h1 {
            font-size: 32px;
            margin-bottom: 10px;
        }

        .header p {
            font-size: 16px;
            opacity: 0.9;
        }

        .form-content {
            padding: 40px;
        }

        .section {
            margin-bottom: 40px;
            padding-bottom: 30px;
            border-bottom: 2px solid #f0f0f0;
        }

        .section:last-child {
            border-bottom: none;
        }

        .section-header {
            display: flex;
            align-items: center;
            margin-bottom: 25px;
            padding-bottom: 15px;
            border-bottom: 3px solid #667eea;
        }

        .section-icon {
            font-size: 28px;
            margin-right: 15px;
        }

        .section-title {
            font-size: 24px;
            color: #333;
            font-weight: 600;
        }

        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            margin-bottom: 20px;
        }

        .form-row.single {
            grid-template-columns: 1fr;
        }

        .form-group {
            display: flex;
            flex-direction: column;
        }

        label {
            font-weight: 600;
            color: #555;
            margin-bottom: 8px;
            font-size: 14px;
        }

        label .required {
            color: #e74c3c;
        }

        input[type="text"],
        input[type="email"],
        input[type="tel"],
        input[type="date"],
        input[type="number"],
        select,
        textarea {
            padding: 12px;
            border: 2px solid #e0e0e0;
            border-radius: 8px;
            font-size: 14px;
            transition: all 0.3s;
            font-family: inherit;
        }

        input[type="text"]:focus,
        input[type="email"]:focus,
        input[type="tel"]:focus,
        input[type="date"]:focus,
        input[type="number"]:focus,
        select:focus,
        textarea:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }

        textarea {
            resize: vertical;
            min-height: 100px;
        }

        .radio-group,
        .checkbox-group {
            display: flex;
            gap: 20px;
            margin-top: 8px;
        }

        .radio-option,
        .checkbox-option {
            display: flex;
            align-items: center;
            gap: 8px;
        }

        input[type="radio"],
        input[type="checkbox"] {
            width: 18px;
            height: 18px;
            cursor: pointer;
        }

        .subsection {
            margin-left: 30px;
            margin-top: 20px;
            padding: 20px;
            background: #f8f9fa;
            border-left: 4px solid #667eea;
            border-radius: 8px;
            display: none;
        }

        .subsection.active {
            display: block;
            animation: slideDown 0.3s ease;
        }

        @keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .rating-group {
            display: flex;
            gap: 10px;
            margin-top: 8px;
        }

        .star {
            font-size: 32px;
            cursor: pointer;
            color: #ddd;
            transition: color 0.2s;
        }

        .star:hover,
        .star.active {
            color: #ffd700;
        }

        .declaration-box {
            background: #fff9e6;
            padding: 20px;
            border-radius: 8px;
            border: 2px solid #ffd700;
            margin-bottom: 20px;
        }

        .submit-btn {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 15px 40px;
            border: none;
            border-radius: 8px;
            font-size: 18px;
            font-weight: 600;
            cursor: pointer;
            width: 100%;
            transition: transform 0.2s, box-shadow 0.2s;
        }

        .submit-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(102, 126, 234, 0.4);
        }

        .submit-btn:active {
            transform: translateY(0);
        }

        .file-upload {
            border: 2px dashed #667eea;
            padding: 20px;
            text-align: center;
            border-radius: 8px;
            cursor: pointer;
            transition: background 0.3s;
        }

        .file-upload:hover {
            background: #f8f9ff;
        }

        .file-upload input[type="file"] {
            display: none;
        }

        @media (max-width: 768px) {
            .form-row {
                grid-template-columns: 1fr;
            }

            .form-content {
                padding: 20px;
            }

            .header {
                padding: 30px 20px;
            }

            .header h1 {
                font-size: 24px;
            }
        }

        .progress-bar {
            height: 4px;
            background: #e0e0e0;
            margin-bottom: 20px;
        }

        .progress-fill {
            height: 100%;
            background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
            width: 0%;
            transition: width 0.3s;
        }

        .info-tooltip {
            display: inline-block;
            width: 16px;
            height: 16px;
            background: #667eea;
            color: white;
            border-radius: 50%;
            text-align: center;
            font-size: 12px;
            line-height: 16px;
            margin-left: 5px;
            cursor: help;
        }

        .empty-state {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 2rem;
            margin: 2rem auto;
            max-width: 500px;
            background-color: #f9fafb;
            border: 1px solid #e5e7eb;
            border-radius: 12px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
            text-align: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .empty-state-icon {
            font-size: 3rem;
            margin-bottom: 1rem;
            color: #3b82f6;
            /* Tailwind blue-500 */
        }

        .empty-state-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: #111827;
            /* Tailwind gray-900 */
            margin-bottom: 0.5rem;
        }

        .empty-state-message {
            font-size: 1rem;
            color: #6b7280;
            /* Tailwind gray-500 */
            line-height: 1.5;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="header">
            <h1>🎓 Alumni Information Form</h1>
            <p>Academic Year 2025-26 | Please fill all mandatory fields marked with *</p>
        </div>

        <div class="progress-bar">
            <div class="progress-fill" id="progressFill"></div>
        </div>

        <% if(exitFormStatus==0 ) { %>
            <form class="form-content" id="alumniForm" action="/exit_form_submission" method="POST">

                <!-- Personal Information Section -->
                <div class="section">
                    <div class="section-header">
                        <span class="section-icon">👤</span>
                        <h2 class="section-title">Personal Information</h2>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label>Full Name <span class="required">*</span></label>
                            <input type="text" name="fullName" required>
                        </div>
                        <div class="form-group">
                            <label>University Roll Number / Student ID <span class="required">*</span></label>
                            <input type="text" name="university_rollno" required>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label>Email Address <span class="required">*</span></label>
                            <input type="email" name="email" required>
                        </div>
                        <div class="form-group">
                            <label>Phone Number <span class="required">*</span></label>
                            <input type="tel" name="phone" required>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label>Date of Birth <span class="required">*</span></label>
                            <input type="date" name="date_of_birth" required>
                        </div>
                        <div class="form-group">
                            <label>Gender <span class="required">*</span></label>
                            <select name="gender" required>
                                <option value="">Select Gender</option>
                                <option value="male">Male</option>
                                <option value="female">Female</option>
                                <option value="other">Other</option>
                                <option value="prefer-not-to-say">Prefer not to say</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-row single">
                        <div class="form-group">
                            <label>Permanent Address <span class="required">*</span></label>
                            <textarea name="permanent_address" required></textarea>
                        </div>
                    </div>

                    <div class="form-row single">
                        <div class="form-group">
                            <label>Current Address (if different)</label>
                            <textarea name="current_address"></textarea>
                        </div>
                    </div>
                </div>

                <!-- Academic Details Section -->
                <div class="section">
                    <div class="section-header">
                        <span class="section-icon">🎓</span>
                        <h2 class="section-title">Academic Details</h2>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label>Branch / Department <span class="required">*</span></label>
                            <input type="text" name="branch" value="Computer Science & Engineering" readonly>

                        </div>
                        <div class="form-group">
                            <label>Year of Graduation <span class="required">*</span></label>
                            <input type="number" name="year_of_education" min="2000" max="2030" required>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label>Final CGPA / Percentage <span class="required">*</span></label>
                            <input type="text" name="cgpa" placeholder="e.g., 8.5 or 85%" required>
                        </div>
                        <div class="form-group">
                            <label>Backlogs (if any)</label>
                            <input type="number" name="backlog" min="0" placeholder="Enter 0 if none">
                        </div>
                    </div>

                    <div class="form-row single">
                        <div class="form-group">
                            <label>Honors / Minor Specialization</label>
                            <input type="text" name="honors_minor_specialization"
                                placeholder="e.g., Machine Learning, Data Science">
                        </div>
                    </div>

                    <div class="form-row single">
                        <div class="form-group">
                            <label>Projects / Thesis Title</label>
                            <textarea name="project_thesis_title"
                                placeholder="Briefly describe your major project or thesis"></textarea>
                        </div>
                    </div>

                    <div class="form-row single">
                        <div class="form-group">
                            <label>Internships Completed</label>
                            <textarea name="internship_completed"
                                placeholder="Company Name | Duration | Role (e.g., Google | 3 months | Software Developer Intern)"></textarea>
                        </div>
                    </div>
                </div>

                <!-- Placement Information Section -->
                <div class="section">
                    <div class="section-header">
                        <span class="section-icon">💼</span>
                        <h2 class="section-title">Placement Information</h2>
                    </div>

                    <div class="form-row single">
                        <div class="form-group">
                            <label>Are you placed? <span class="required">*</span></label>
                            <div class="radio-group">
                                <div class="radio-option">
                                    <input type="radio" name="placed" value="yes" id="placedYes"
                                        onchange="togglePlacementDetails(true)" required>
                                    <label for="placedYes">Yes</label>
                                </div>
                                <div class="radio-option">
                                    <input type="radio" name="placed" value="no" id="placedNo"
                                        onchange="togglePlacementDetails(false)">
                                    <label for="placedNo">No</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div id="placementDetails" class="subsection">
                        <div class="form-row">
                            <div class="form-group">
                                <label>Company Name <span class="required">*</span></label>
                                <input type="text" name="company_name">
                            </div>
                            <div class="form-group">
                                <label>Job Role <span class="required">*</span></label>
                                <input type="text" name="job_role">
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label>CTC Offered (in LPA) <span class="required">*</span></label>
                                <input type="text" name="ctc_offered" placeholder="e.g., 12.5 LPA">
                            </div>
                            <div class="form-group">
                                <label>Joining Date</label>
                                <input type="date" name="joining_date">
                            </div>
                        </div>

                        <div class="form-row single">
                            <div class="form-group">
                                <label>Location of Posting</label>
                                <input type="text" name="location_of_posting" placeholder="e.g., Bangalore, Hyderabad">
                            </div>
                        </div>

                        <div class="form-row single">
                            <div class="form-group">
                                <label>Offer Letter Upload (Optional - PDF, max 2MB)</label>
                                <div class="file-upload" onclick="document.getElementById('offerLetter').click()">
                                    <input type="file" id="offerLetter" name="offer_letter_upload" accept=".pdf">
                                    <p>📄 Click to upload offer letter</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Future Plans Section -->
                <div class="section">
                    <div class="section-header">
                        <span class="section-icon">🚀</span>
                        <h2 class="section-title">Future Plans</h2>
                    </div>

                    <div class="form-row single">
                        <div class="form-group">
                            <label>Planning for Higher Studies? <span class="required">*</span></label>
                            <div class="radio-group">
                                <div class="radio-option">
                                    <input type="radio" name="higherStudies" value="yes" id="studiesYes"
                                        onchange="toggleStudiesDetails(true)" required>
                                    <label for="studiesYes">Yes</label>
                                </div>
                                <div class="radio-option">
                                    <input type="radio" name="higherStudies" value="no" id="studiesNo"
                                        onchange="toggleStudiesDetails(false)">
                                    <label for="studiesNo">No</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div id="studiesDetails" class="subsection">
                        <div class="form-row">
                            <div class="form-group">
                                <label>Course Name <span class="required">*</span></label>
                                <input type="text" name="future_course_name" placeholder="e.g., MS in Computer Science">
                            </div>
                            <div class="form-group">
                                <label>University Name <span class="required">*</span></label>
                                <input type="text" name="future_university_name">
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label>Country <span class="required">*</span></label>
                                <input type="text" name="future_country" placeholder="e.g., USA, UK, Germany">
                            </div>
                            <div class="form-group">
                                <label>Admission Status <span class="required">*</span></label>
                                <select name="admission_status">
                                    <option value="">Select Status</option>
                                    <option value="confirmed">Confirmed</option>
                                    <option value="awaiting">Awaiting Decision</option>
                                    <option value="applied">Applied</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="form-row single">
                        <div class="form-group">
                            <label>Entrepreneurship / Startup Plans</label>
                            <textarea name="entrepreneurship_plans"
                                placeholder="Briefly describe your startup idea or entrepreneurial plans"></textarea>
                        </div>
                    </div>

                    <div class="form-row single">
                        <div class="form-group">
                            <label>Government Exam Preparation (e.g., UPSC, GATE, etc.)</label>
                            <input type="text" name="govt_exam_prep" placeholder="Mention exam name if preparing">
                        </div>
                    </div>

                    <div class="form-row single">
                        <div class="form-group">
                            <label>Other Plans</label>
                            <textarea name="other_plans"
                                placeholder="Any other career plans or goals you'd like to share"></textarea>
                        </div>
                    </div>
                </div>

                <!-- Feedback Section -->
                <div class="section">
                    <div class="section-header">
                        <span class="section-icon">📝</span>
                        <h2 class="section-title">Feedback & Suggestions</h2>
                    </div>

                    <div class="form-row single">
                        <div class="form-group">
                            <label>Rate Your Experience at Institution <span class="required">*</span></label>
                            <div class="rating-group" id="ratingStars">
                                <span class="star" data-rating="1" onclick="setRating(1)">★</span>
                                <span class="star" data-rating="2" onclick="setRating(2)">★</span>
                                <span class="star" data-rating="3" onclick="setRating(3)">★</span>
                                <span class="star" data-rating="4" onclick="setRating(4)">★</span>
                                <span class="star" data-rating="5" onclick="setRating(5)">★</span>
                            </div>
                            <input type="hidden" name="rate_institution" id="ratingValue" required>
                        </div>
                    </div>

                    <div class="form-row single">
                        <div class="form-group">
                            <label>Comments on Your Experience</label>
                            <textarea name="experience"
                                placeholder="Share your thoughts about your time at the institution"></textarea>
                        </div>
                    </div>

                    <div class="form-row single">
                        <div class="form-group">
                            <label>Suggestions for Improvement</label>
                            <textarea name="suggestions"
                                placeholder="How can we make the institution better for future students?"></textarea>
                        </div>
                    </div>

                    <div class="form-row single">
                        <div class="form-group">
                            <label>Would you like to be part of the Alumni Network? <span
                                    class="required">*</span></label>
                            <div class="radio-group">
                                <div class="radio-option">
                                    <input type="radio" name="alumni_network" value=1 id="networkYes" required>
                                    <label for="networkYes">Yes</label>
                                </div>
                                <div class="radio-option">
                                    <input type="radio" name="alumni_network" value=0 id="networkNo">
                                    <label for="networkNo">No</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Declaration Section -->
                <div class="section">
                    <div class="section-header">
                        <span class="section-icon">✅</span>
                        <h2 class="section-title">Declaration & Consent</h2>
                    </div>

                    <div class="declaration-box">
                        <p style="font-size: 14px; line-height: 1.6; color: #666; margin-bottom: 15px;">
                            <strong>Declaration:</strong> I hereby declare that the information provided above is true
                            and
                            accurate to the best of my knowledge. I understand that any false information may lead to
                            disqualification from alumni activities and benefits.
                        </p>
                    </div>

                    <div class="form-row single">
                        <div class="form-group">
                            <div class="checkbox-option">
                                <input type="checkbox" name="data_consent" id="dataConsent" required>
                                <label for="dataConsent">I consent to the institution using my data for alumni records
                                    and
                                    communications <span class="required">*</span></label>
                            </div>
                        </div>
                    </div>

                    <div class="form-row single">
                        <div class="form-group">
                            <div class="checkbox-option">

                                <input type="checkbox" name="alumni_consent" id="alumniConsent" required>
                                <label for="alumniConsent">I agree to receive alumni newsletters, event invitations, and
                                    updates <span class="required">*</span></label>
                            </div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label>Digital Signature (Type your full name in Capital Letters) <span
                                    class="required">*</span></label>
                            <input type="text" name="digital_signature" id="signature"
                                placeholder="Type your full name as signature" required>
                        </div>
                        <div class="form-group">
                            <label>Date of Submission<span class="required">*</span></label>
                            <input type="date" name="date_of_submission" required>
                        </div>
                    </div>
                </div>

                <button type="submit" class="submit-btn">Submit Alumni Form</button>
            </form>
            <% } else { %>
                <div class="empty-state">
                    <div class="empty-state-icon">✅</div>
                    <h3 class="empty-state-title">Already Submitted</h3>
                    <p class="empty-state-message">You are allowed to fill these form only once.</p>
                </div>
                <% }%>
    </div>

    <script>
        let ratingValue = 0;

        function validateSignature() {
            const signatureInput = document.getElementById("signature").value;
            const isAllCaps = signatureInput === signatureInput.toUpperCase();

            if (!isAllCaps) {
                alert("Please type your full name in CAPITAL LETTERS as your digital signature.");
                return false; // Prevent form submission
            }

            return true; // Allow form submission
        }

        function togglePlacementDetails(show) {
            const details = document.getElementById('placementDetails');
            if (show) {
                details.classList.add('active');
            } else {
                details.classList.remove('active');
            }
        }

        function toggleStudiesDetails(show) {
            const details = document.getElementById('studiesDetails');
            if (show) {
                details.classList.add('active');
            } else {
                details.classList.remove('active');
            }
        }

        function setRating(rating) {
            ratingValue = rating;
            document.getElementById('ratingValue').value = rating;

            const stars = document.querySelectorAll('.star');
            stars.forEach((star, index) => {
                if (index < rating) {
                    star.classList.add('active');
                } else {
                    star.classList.remove('active');
                }
            });
        }

        function updateProgress() {
            const form = document.getElementById('alumniForm');
            const inputs = form.querySelectorAll('input[required], select[required], textarea[required]');
            let filled = 0;

            inputs.forEach(input => {
                if (input.type === 'radio' || input.type === 'checkbox') {
                    if (document.querySelector(`input[name="${input.name}"]:checked`)) {
                        filled++;
                    }
                } else if (input.value.trim() !== '') {
                    filled++;
                }
            });

            const progress = (filled / inputs.length) * 100;
            document.getElementById('progressFill').style.width = progress + '%';
        }

        document.getElementById('alumniForm').addEventListener('input', updateProgress);
        document.getElementById('alumniForm').addEventListener('change', updateProgress);

        function handleSubmit(event) {
            event.preventDefault();

            if (ratingValue === 0) {
                alert('Please provide a rating for your experience at the institution.');
                return;
            }

            alert('Thank you! Your alumni information has been submitted successfully.\n\nYou will receive a confirmation email shortly.');

            // Here you would normally send the form data to a server
            // For demonstration, we'll just reset the form
            // document.getElementById('alumniForm').reset();
            // updateProgress();
        }

        // Set today's date as default for submission date
        window.addEventListener('load', function () {
            const today = new Date().toISOString().split('T')[0];
            document.querySelector('input[name="submissionDate"]').value = today;
        });

        // File upload feedback
        document.getElementById('offerLetter').addEventListener('change', function (e) {
            const fileName = e.target.files[0]?.name;
            if (fileName) {
                e.target.parentElement.querySelector('p').textContent = '✓ ' + fileName;
            }
        });
    </script>
</body>

</html>