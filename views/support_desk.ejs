      </div>
    </section>

    <!-- Pending Verification Section -->
    <section id="pendingVerificationSection">
      <div class="section-header">
        <h2>Pending Needs</h2>
      </div>

      <div class="carousel-outer">
        <button class="side-arrow left" id="pendingLeft" aria-label="Scroll left">&#9664;</button>
        <button class="side-arrow right" id="pendingRight" aria-label="Scroll right">&#9654;</button>

        <div class="cards pending" id="pendingCards">
          <%pendingSupport.forEach((req)=>{%>
            <article class="card">
              <img src="http://static.photos/education/250x140/3" alt="<%=req.Request_Title || 'Support Request'%>" />
              <div class="card-content">
                <h3 class="card-title">
                  <%=req.title || 'Untitled Request' %>
                </h3>
                <p class="desc">
                  <%=req.description%>
                </p>
                <div class="details">
                  <span class="verified-label">
                    <!-- <strong>Verified By:</strong>  -->
                    <span style="color:#c0392b;">Pending</span>
                  </span>
                  <span><strong>Supported By:</strong> None yet</span>
                  <span><strong>Submitted On:</strong>
                    <%=req.created_at%>
                  </span>
                  <!-- <span><strong>Extra Info:</strong> <%=req.Extra_Info || 'No additional information'%></span> -->
                </div>
              </div>
            </article>
            <%})%>
        </div>
      </div>
    </section>

    <br><br><br><br><br><br><br><br>
    <% if (typeof msg !=='undefined' && msg) { %>
      <script>
        alert("<%= msg %>");
        msg = "";
      </script>
      <% } %>
  </main>

  <script>
    // Add Yours button
    // document.getElementById('addYoursBtn').addEventListener('click', function () {
    //   alert('Add Yours button clicked! You can implement a modal form here.');
    // });

    const addBtn = document.getElementById('addYoursBtn');
    const modal = document.getElementById('supportModal');
    const closeBtn = document.getElementById('closeModal');
    const urlParams = new URLSearchParams(window.location.search);
    const mysupportBtn = document.getElementById("mysupportBtn");
    mysupportBtn.style.display = "none";

    const message = urlParams.get('message');

    const userIs = "<%= userIs %>"; // EJS injects the value as a string
    let isSupported = "<%=isSupported%>";
    const userID = "<%=userID%>";

    if (userIs === "alumni" || userIs === "faculty") {
      addBtn.style.display = "none";
    }

    if (isSupported == 1) {
      mysupportBtn.style.display = "block";
      mysupportBtn.addEventListener("click" , ()=>{
        window.location.href = `/mysupportings/${userID}`;
      })
    }

    if(userIs === "faculty"){
      
    }
    if (message) {
      alert(message);
    }

    addBtn.addEventListener('click', () => {
      modal.style.display = 'flex';
    });

    closeBtn.addEventListener('click', () => {
      modal.style.display = 'none';
    });

    window.addEventListener('click', (e) => {
      if (e.target === modal) {
        modal.style.display = 'none';
      }
    });
    // Utility to bind arrows
    function bindArrows(leftBtnId, rightBtnId, scrollerId) {
      const scroller = document.getElementById(scrollerId);
      document.getElementById(leftBtnId).addEventListener('click', () => {
        scroller.scrollBy({ left: -300, behavior: 'smooth' });
      });
      document.getElementById(rightBtnId).addEventListener('click', () => {
        scroller.scrollBy({ left: 300, behavior: 'smooth' });
      });
    }

    // Supported and Pending bindings
    bindArrows('supportedLeft', 'supportedRight', 'supportedCards');
    bindArrows('pendingLeft', 'pendingRight', 'pendingCards');

    // SUPPORT IN PROGESSS
    function wantToSupport(userID, supportID) {
      window.location.href = `/myAssignedSupport/${userID}/${supportID}`;
    }
  </script>
