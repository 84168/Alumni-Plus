                                                            id="duration-<%=schedule.Session_ID%>">
                                                            <%= schedule.Duration %>
                                                        </div>
                                                    </div>

                                                    <!-- <div class="detail-item-card">
                                                        <div class="detail-icon-small">👥</div>
                                                        <div class="detail-label-small">Participants</div>
                                                        <div class="detail-value-small">
